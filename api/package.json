{
    "name": "yami-tailor-shop-api",
    "version": "1.0.0",
    "description": "API Backend for the Yami Tailor Shop app",
    "main": "./build",
    "scripts": {
        "test": "jest",
        "build-ts": "tsc",
        "start": "nodemon ./build",
        "dev": "nodemon -r ts-node/register -e ts ./src",
        "lint": "tsc --noEmit && eslint '**/*.{js,ts}' --ignore-path .gitignore --quiet --fix",
        "build": "npm run lint && npm run build-ts",
        "register-ts": "node -r ts-node/register ./src/services/register.ts"
    },
    "engines": {
        "node": "15.x.x",
        "npm": "7.x.x"
    },
    "keywords": [
        "node",
        "express",
        "sqlite3",
        "api"
    ],
    "author": "Harold Iván Muñoz Garcés",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "5.0.0",
        "class-transformer": "0.4.0",
        "class-validator": "0.13.1",
        "cookie-parser": "1.4.5",
        "cors": "2.8.5",
        "dotenv": "8.2.0",
        "express": "4.17.1",
        "jsonwebtoken": "8.5.1",
        "reflect-metadata": "0.1.13",
        "sqlite3": "5.0.0",
        "typeorm": "0.2.31",
        "winston": "3.3.3"
    },
    "devDependencies": {
        "@types/bcrypt": "3.0.0",
        "@types/cookie-parser": "1.4.2",
        "@types/cors": "2.8.9",
        "@types/express": "4.17.11",
        "@types/jest": "26.0.23",
        "@types/jsonwebtoken": "8.5.0",
        "@types/node": "14.14.22",
        "@types/sqlite3": "3.1.6",
        "@typescript-eslint/eslint-plugin": "4.17.0",
        "@typescript-eslint/parser": "4.17.0",
        "eslint": "7.22.0",
        "eslint-plugin-jest": "24.3.6",
        "jest": "27.0.4",
        "nodemon": "2.0.7",
        "supertest": "6.1.3",
        "ts-jest": "27.0.3",
        "ts-node": "9.1.1",
        "typescript": "4.1.3"
    }
}
