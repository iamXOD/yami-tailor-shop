{
    "name": "yami-tailor-shop-api",
    "version": "1.0.0",
    "description": "API Backend for the Yami Tailor Shop app",
    "main": "./build",
    "scripts": {
        "test": "jest",
        "build-ts": "tsc",
        "start": "nodemon ./build",
        "dev": "nodemon -r ts-node/register -e ts ./src",
        "lint": "tsc --noEmit && eslint '**/*.{js,ts}' --ignore-path .gitignore --quiet --fix",
        "build": "npm run lint && npm run build-ts",
        "register-ts": "node -r ts-node/register ./src/services/register.ts"
    },
    "engines": {
        "node": ">=16",
        "npm": ">=7"
    },
    "keywords": [
        "node",
        "express",
        "sqlite3",
        "api"
    ],
    "author": "Harold Iván Muñoz Garcés",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.0.0",
        "class-transformer": "0.4.0",
        "class-validator": "0.13.1",
        "cookie-parser": "1.4.5",
        "cors": "2.8.5",
        "dotenv": "10.0.0",
        "express": "4.17.1",
        "jsonwebtoken": "8.5.1",
        "reflect-metadata": "0.1.13",
        "sqlite3": "5.0.2",
        "typeorm": "0.2.37",
        "winston": "3.3.3"
    },
    "devDependencies": {
        "@types/bcrypt": "5.0.0",
        "@types/cookie-parser": "1.4.2",
        "@types/cors": "2.8.12",
        "@types/express": "4.17.13",
        "@types/jest": "26.0.24",
        "@types/jsonwebtoken": "8.5.4",
        "@types/node": "16.6.1",
        "@types/sqlite3": "3.1.7",
        "@types/supertest": "2.0.11",
        "@typescript-eslint/eslint-plugin": "4.29.1",
        "@typescript-eslint/parser": "4.29.1",
        "eslint": "7.32.0",
        "eslint-plugin-jest": "24.4.0",
        "jest": "27.0.6",
        "nodemon": "2.0.12",
        "supertest": "6.1.5",
        "ts-jest": "27.0.4",
        "ts-node": "10.2.0",
        "typescript": "4.3.5"
    }
}
